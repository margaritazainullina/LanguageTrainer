<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.edu.hneu.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ua.hneu.languagetrainer.ItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="ua.hneu.languagetrainer.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.pages.AppSettings"
            android:label="@string/title_activity_app_settings" >
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.pages.WordPracticeActivity"
            android:label="@string/title_activity_word_practice" >
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.pages.WordPracticeResultActivity"
            android:label="@string/title_activity_word_practice_result" >
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.pages.MatchWordsActivity"
            android:label="@string/title_activity_match_the_words" >
        </activity>
        <activity
            android:name="ua.hneu.languagetrainer.pages.WordPracticeActivity1"
            android:label="@string/title_activity_word_practice_activity1" >
        </activity>
    </application>

</manifest>